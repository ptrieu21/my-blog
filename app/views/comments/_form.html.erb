
<div class='row'>
  <div class='col-md-12'>
    <%= form_for [@article, comment], :html => {class: "form-horizontal", role: "form"} do |f| %>
    
      
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <%= f.text_area :content, rows: 4, class: "form-control", placeholder: "Comment..." %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit("Comment", class: 'btn btn-primary btn-lg') %>
        </div>
      </div>
      
    <% end %>

    <div class="col-xs-4 col-xs-offset-4">
       [ <%= link_to "Cancel request and return", article_path(@article) %> ]
    </div>
  </div>
</div>