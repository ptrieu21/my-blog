
<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="well well-sm">      
      <div class="comment-body">
        <%= markdown(comment.content).html_safe %>
        <div class="article-meta-details">
          <small>Created by: <%= comment.user.email %>,
            <%= time_ago_in_words(comment.created_at) %> ago,
            last updated: <%= time_ago_in_words(comment.updated_at) %>
          </small>
        </div>
      
      </div>
      <% if user_signed_in? && (current_user == comment.user )  %>
        <div class="article-actions">
          <%= link_to "Edit this article", edit_article_comment_path(comment.article, comment), class: "btn btn-xs btn-primary" %>
          <%= link_to "Delete this article", article_comment_path(comment.article, comment), method: :delete,
                              data: {confirm: "Are you sure to delete this article?"}, 
                              class: "btn btn-xs btn-danger" %>
        </div>
      <% end %>
      
    </div>
  </div>
</div>