<h1 align="center">Log in</h1>

<%= render 'shared/errors', obj: @user %>
  
<div class='row'>
  <div class='col-md-12'>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: "form-horizontal", role: "form"})  do |f| %>          
      <div class="form-group">
        <div class="col-sm-2 control-label">  
          <%= f.label :email %>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter email" %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="col-sm-2 control-label">  
          <%= f.label :password %>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">  
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>       
        </div>
      <% end -%>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit("Log in", class: 'btn btn-primary btn-lg') %>
        </div>
      </div>
      
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
